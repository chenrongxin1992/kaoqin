    jQuery.browser={};(function(){jQuery.browser.msie=false; 
    jQuery.browser.version=0;if(navigator.userAgent.match(/MSIE ([0-9]+)./)){ jQuery.browser.msie=true;jQuery.browser.version=RegExp.$1;}})();
       $(function() {

        //表单验证
          $('form').bootstrapValidator({
  　　　　　　　message: 'This value is not valid',
                excluded : [':disabled'],//[':disabled', ':hidden', ':not(:visible)']
                submitButtons: 'button[type="submit"]',
                submitHandler: null,
              　feedbackIcons: {
                  　　　　　　　　valid: 'glyphicon glyphicon-ok',
                  　　　　　　　　invalid: 'glyphicon glyphicon-remove',
                  　　　　　　　　validating: 'glyphicon glyphicon-refresh'
              　　　　　　　　   },
                fields: {//(?!.*select)^.*$
                    card_no: {
                        message: '校园卡号验证失败',
                        validators: {
                            notEmpty: {
                                message: '校园卡号不能为空!'
                            },
                            regexp: {
                               regexp: /^\d{6}$/,
                               message: '请输入6位校园卡号'
                           }/*,
                           threshold :  6 , //有6字符以上才发送ajax请求，（input中输入一个字符，插件会向服务器发送一次，设置限制，6字符以上才开始）
                           remote:{
                            url:'/front/checkUserExist',
                            message:'用户不存在！',
                            type:'POST',
                            delay:'1000'
                           }*/
                        }
                    },
                    card_pwd:{
                      message: '请输入密码',
                      validators:{
                        notEmpty: {
                            message: '密码不能为空!'
                        }
                      }
                    }
                }
          }).on('success.form.bv', function(e) {
            //return false
            console.log(e)
            e.preventDefault();//防止自动提交
            let card_no = $('#card_no').val(),
                card_pwd = $('#card_pwd').val()
            console.log('check args-->',card_no,card_pwd)
            //提交
            $.ajax({
              url: '/front/login', 
              async: true,
              dataType: 'json',
              type: 'POST',
              data: {
                card_no:card_no,
                card_pwd:card_pwd
              },

              success: function(result){
                console.log('login success')
                console.log(result)
                if(result.errCode == 0){
                  window.location.href = '/front/overview'
                }
                if(result.errCode == -1){
                  //弹出模态框
                  $('.modal-msg').modal('show')
                  $('.modal-body').text(result.errMsg)
                }
              },
              error: function(e){
                console.log("error");
                //console.error(e.message)
                $('.modal-msg').modal('show')
                $('.modal-body').text('登录失败')
              },
          });
        });//on

        //点击模态框确认按钮
        $('#result-sure').on('click',function(){
          window.location.href = '/front/login'
        })
      })

