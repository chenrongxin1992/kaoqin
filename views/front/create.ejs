    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script type="text/javascript" src='/javascripts/jquery-1.10.2.min.js' ></script>
    <script type="text/javascript" src='/javascripts/bootstrap.min.js' ></script>
    <script type="text/javascript" src='/javascripts/moment-with-locales.min.js' ></script>
    <script type="text/javascript" src='/javascripts/bootstrap-datetimepicker.min.js' ></script>
    <script type="text/javascript" src='/javascripts/bootstrap-select.js' ></script>
    <script type="text/javascript" src='/javascripts/bootstrapValidator.min.js' ></script>
    <script type="text/javascript">
    jQuery.browser={};(function(){jQuery.browser.msie=false; 
    jQuery.browser.version=0;if(navigator.userAgent.match(/MSIE ([0-9]+)./)){ jQuery.browser.msie=true;jQuery.browser.version=RegExp.$1;}})();
       $(function() {
        'use strict';
        var newDate = new Date();
        var t       = newDate.toJSON(); 
        //日期选择
        $('#datetimepicker2').datetimepicker({  
            format: 'YYYY-MM-DD',  
            locale: moment.locale('zh-cn') ,
        });  
        //$('#datetimepicker2').datetimepicker('setStartDate', '2012-01-01');

        //时间选择限制
        $('#first_hour').change(function(){
          let temp_time = $('#first_hour option:selected').val()
          console.log('first_hour-->',temp_time)
          $("#second_hour option").remove()
          if(parseInt(temp_time,10) == 21){
            $("#second_hour").append("<option>"+21+"</option>");  
          }else{
            for(let i=parseInt(temp_time,10)+1;i<=21;i++){
              let k = String(i)
              if(k.length < 2)
                k = '0' + k
              console.log('check k -->',k)
              $("#second_hour").append("<option>"+k+"</option>");  
            }
          }
           $("#second_hour").selectpicker("refresh")
       })//change

        $('#meeting_type').change(function(){
          'use strict'
          let temp_type = $('#meeting_type option:selected').val()
          console.log('meeting_nianji-->',temp_type)
          $("#meeting_nianji option").remove()
          if(temp_type == '非年级会议'){
            $("#meeting_nianji").append("<option>非年级会议</option>");  
          }else{
            let date=new Date;
            let year=date.getFullYear(); 
            $("#meeting_nianji").append("<option>"+ parseInt(year) +"</option>");  
            $("#meeting_nianji").append("<option>"+ (parseInt(year)-1) +"</option>");
            $("#meeting_nianji").append("<option>"+ (parseInt(year)-2) +"</option>");
            $("#meeting_nianji").append("<option>"+ (parseInt(year)-3) +"</option>");
          }
           $("#meeting_nianji").selectpicker("refresh")
       })//change

        //年级信息
        $('#meeting_type').change(function(){
          let meeting_type = $('#meeting_type').val()
          console.log('meeting_type -- >',meeting_type)
          if(meeting_type == '非年级会议'){
            console.log('非年级会议，不处理')
            $("#meeting_nianji").attr("disabled","disabled"); 
          }else{
            console.log('年级会议，取消年级禁用下拉框')
            //$("#second_hour option").remove()
            $("#meeting_nianji").removeAttr("disabled"); 
            //$("#meeting_nianji").selectpicker("refresh")
          }
          $("#meeting_nianji").selectpicker("refresh")
        })

//表单验证
          $('form').bootstrapValidator({
  　　　　　　　message: 'This value is not valid',
                submitButtons: 'button[type="submit"]',
                submitHandler: null,
              　feedbackIcons: {
                  　　　　　　　　valid: 'glyphicon glyphicon-ok',
                  　　　　　　　　invalid: 'glyphicon glyphicon-remove',
                  　　　　　　　　validating: 'glyphicon glyphicon-refresh'
              　　　　　　　　   },
                fields: {
                    meeting_name: {
                        message: '会议名称验证失败',
                        validators: {
                            notEmpty: {
                                message: '会议名称不能为空!'
                            }
                        }
                    },
                    meeting_des: {
                        validators: {
                            notEmpty: {
                                message: '会议描述不能为空!'
                            }
                        }
                    },
                    meeting_place: {
                      message: '会议地点验证失败',
                        validators: {
                            notEmpty: {
                                message: '会议地点不能为空!'
                            }
                        }
                    }
                }
          }).on('success.form.bv', function(e) {
            console.log(e)
            e.preventDefault();
            let meeting_name = $('#meeting_name').val(),
                meeting_place = $('#meeting_place').val(),
                meeting_des = $('#meeting_des').val(),
                meeting_date = $('#datetimepicker2').val(),
                meeting_time = $('#first_hour option:selected').val() + ':' + $('#first_minute option:selected').val() + '-' + $('#second_hour option:selected').val() + ':' + $('#second_minute option:selected').val(),
                meeting_type = $('#meeting_type').val(),
                meeting_nianji = $('#meeting_nianji').val()

            console.log('check args-->',meeting_name,meeting_des,meeting_date,meeting_time,meeting_type,meeting_nianji)
            //提交
            $.ajax({
              url: '/front/create', 
              async: true,
              dataType: 'json',
              type: 'POST',
              data: {
                meeting_name:meeting_name,
                meeting_des:meeting_des,
                meeting_date:meeting_date,
                meeting_time:meeting_time,
                meeting_place:meeting_place,
                meeting_type:meeting_type,
                meeting_nianji:meeting_nianji
              },

              success: function(result){
                console.log('submit success')
                console.log(result)
                if(result.errCode == 0){
                  //弹出模态框
                  $('.modal-msg').modal('show')
                  $('.modal-body').text('会议创建成功，点击确认返回首页，或者直接生成会议二维码！')
                  $('.modal-msg').attr('randomStr',result.result.randomStr);
                  //$('.modal-msg').attr('apply_name',apply_name);
                }
                if(result.errCode == -1){
                  //弹出模态框
                  $('.modal-msg').modal('show')
                  $('.modal-body').text(result.errMsg)
                }
              },
              error: function(e){
                console.log("error");
                //console.error(e.message)
                $('.modal-msg').modal('show')
                $('.modal-body').text('申请操作失败')
              },
          });
        });
        $('#result-sure').on("click",function(){
          window.location.href = '/front/overview'
        })
        $('#result-qrcode').on("click",function(){
          let randomStr = $('.modal-msg').attr('randomStr');
          console.log('check randomStr-->',randomStr)
          window.location.href = '/front/qrcode' + '?randomStr=' + randomStr
        })
      })
    </script>
  </body>
