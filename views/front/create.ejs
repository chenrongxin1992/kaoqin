  <body>
    <div class="container">
      <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
          <img src="../images/szucsselogo.png" class="img-responsive" alt="">  
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 user">
          <span class="pull-right user"><a href="/front/overview">首页</a> | 当前用户：<span style="color: red"> <%=user.name%></span>  | <a href="/front/logout">退出</a></span>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
          <p class="text-center head"><span class="glyphicon glyphicon-plus">创建新会议</span></p>
         
        </div>
      </div>

      <div class="row uniform">
        <form class="form-horizontal">
          <div class="form-group">
            <label for="meeting_name" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">会议名称</label>
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" id="meeting_name" placeholder="请输入会议名称" name="meeting_name">
            </div>
          </div>
          <div class="form-group">
            <label for="meeting_place" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">会议地点</label>
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" id="meeting_place" placeholder="请输入会议地点" name="meeting_place">
            </div>
          </div>
          <div class="form-group">
            <label for="meeting_des" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">会议描述</label>
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
              <textarea class="form-control" rows="3" id="meeting_des" placeholder="请描述会议" name="meeting_des"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="meeting_date" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">会议日期</label>
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12" id=''>
              <input type="text" class="form-control" id="datetimepicker2" placeholder="请选择日期" name="meeting_date">
            </div>
          </div>
          <div class="form-group">
            <label for="meeting_time" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 control-label">会议时间</label>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-2">
              <select id="first_hour" class="selectpicker" data-hide-disabled="true" data-live-search="false">
                <option>08</option><option>09</option><option>10</option><option>11</option><option>12</option><option>13</option>
                <option>14</option><option>15</option><option>16</option><option>17</option><option>18</option><option>19</option>
                <option>20</option><option>21</option>
              </select>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-2">
              <select id="first_minute" class="selectpicker" data-hide-disabled="true" data-live-search="false">
                <option>00</option><option>30</option>
              </select>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 to">至</div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-2">
              <select id="second_hour" class="selectpicker" data-hide-disabled="true" data-live-search="false">
                <option>09</option><option>10</option><option>11</option><option>12</option><option>13</option>
                <option>14</option><option>15</option><option>16</option><option>17</option><option>18</option><option>19</option>
                <option>20</option><option>21</option>
              </select>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-2">
              <select id="second_minute" class="selectpicker" data-hide-disabled="true" data-live-search="false">
                <option>00</option><option>30</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="meeting_type" class="col-lg-3 col-md-3 col-sm-3 col-xs-6 control-label">会议类型</label>
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
              <select id="meeting_type" class="selectpicker" data-hide-disabled="true" data-live-search="false">
                <option>非年级会议</option><option>年级会议</option>
              </select>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-6 " style="text-align: center;font-weight: bold;line-height: 33px;">年级</div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-6" readonly="readonly">
              <select id="meeting_nianji" class="selectpicker" data-hide-disabled="true" data-live-search="false" disabled="disabled">
                <option>非年级会议</option><option>2017</option><option>2016</option><option>2015</option><option>2014</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-3  col-lg-9 col-md-9 col-sm-9 col-xs-9 ">
              <button type="submit" class="btn btn-success" id="now-submit">确认</button>
            </div>
          </div>
        </form>
      </div>

      <div class="row">
        <hr>
      </div>

      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 footer">
          <span>2017 © 计算机与软件学院</span>
        </div>
      </div>
