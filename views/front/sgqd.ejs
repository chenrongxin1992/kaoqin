       $(function() {
        'use strict';
        //时间选择限制
        $('#meeting_name').change(function(){

          let temp_meetingName = $('#meeting_name option:selected').val()
          console.log('当前选择会议名-->',temp_meetingName)
          let temp_result = '<%- JSON.stringify(result) %>' //字符串
              temp_result = temp_result.replace(/\n/g,'<br />')
              temp_result = JSON.parse(temp_result);
          console.log('一周内会议信息-->',temp_result)

          $("#randomStr option").remove()
          $("#meeting_date_time").empty()
          $("#meeting_des").empty()
          $("#meeting_type").empty()
          $("#meeting_nianji").empty()
          $("#meeting_place").empty()

          for(let i=0; i<temp_result.length; i++){
            if(temp_meetingName == temp_result[i].meeting_name){
              console.log('----- 找到该会议 -----')
              console.log('该会议随机码-->',temp_result[i].randomStr)
              console.log('日期-->',temp_result[i].meeting_date,temp_result[i].meeting_time)
              console.log('描述-->',temp_result[i].meeting_des)
              $("#randomStr").append("<option>"+temp_result[i].randomStr+"</option>");
              $("#meeting_date_time").append("<p>"+temp_result[i].meeting_date + '  ' + temp_result[i].zhouji + '  ' +temp_result[i].meeting_time+"</p>");
              $("#meeting_des").append("<p style='word-break:break-all;'>"+temp_result[i].meeting_des + "</p>");
              $("#meeting_place").append("<p>"+temp_result[i].meeting_place + "</p>");
              if(temp_result[i].meeting_type == '0'){
                $("#meeting_type").append("<p>"+'非年级会议' + "</p>");
                 $("#meeting_nianji").append("<p>"+'暂无' + "</p>");
              }else{
                $("#meeting_type").append("<p>"+'年级会议' + "</p>");
                $("#meeting_nianji").append("<p>"+temp_result[i].meeting_nianji + "</p>");
              }
            }
          }
          if(temp_meetingName == 'select'){
              $("#meeting_date_time").append("<p>"+'暂无信息'+"</p>");
              $("#meeting_des").append("<p>"+'暂无信息' + "</p>");
              $("#meeting_place").append("<p>"+'暂无信息' + "</p>");
              $("#meeting_type").append("<p>"+'暂无信息' + "</p>");
              $("#meeting_nianji").append("<p>"+'暂无信息' + "</p>");
              $('#code').empty()
          }
          $("#randomStr").selectpicker("refresh")
       })//change

        //表单验证
          $('form').bootstrapValidator({
  　　　　　　　message: 'This value is not valid',
                excluded : [':disabled'],//[':disabled', ':hidden', ':not(:visible)']
                submitButtons: 'button[type="submit"]',
                submitHandler: null,
              　feedbackIcons: {
                  　　　　　　　　valid: 'glyphicon glyphicon-ok',
                  　　　　　　　　invalid: 'glyphicon glyphicon-remove',
                  　　　　　　　　validating: 'glyphicon glyphicon-refresh'
              　　　　　　　　   },
                fields: {//(?!.*select)^.*$
                    people_no: {
                        message: '学号或工号验证失败',
                        validators: {
                            notEmpty: {
                                message: '校园卡号不能为空!'
                            },
                            regexp: {
                               regexp: /^\d{6}$/,
                               message: '请输入6位校园卡号'
                           }
                                  //^\d{n}$
                        }
                    },
                    meeting_name:{
                      message: '请选择会议',
                      validators:{
                        regexp:{
                          regexp:/(?!.*select)^.*$/,
                          message:'请选择会议'
                        }
                      }
                    }
                }
          }).on('success.form.bv', function(e) {
            //return false
            console.log(e)
            e.preventDefault();
            let meeting_name = $('#meeting_name').val(),
                meeting_des = $('#meeting_des').text(),
                meeting_date = $('#meeting_date_time').text(),
                randomStr = $('#randomStr option:selected').val(),
                people_no = $('#people_no').val()
            console.log('check args-->',meeting_name,meeting_des,meeting_date,randomStr,people_no)
            //提交
            $.ajax({
              url: '/front/sgqd', 
              async: true,
              dataType: 'json',
              type: 'POST',
              data: {
                meeting_name:meeting_name,
                meeting_des:meeting_des,
                meeting_date:meeting_date,
                randomStr:randomStr,
                people_no:people_no
              },

              success: function(result){
                console.log('手工签到 success')
                console.log(result)
                if(result.errCode == 0){
                  //弹出模态框
                  $('.modal-msg').modal('show')
                  $('.modal-body').text('签到成功，点击确认返回！')
                  //$('.modal-msg').attr('randomStr',result.result.randomStr);
                  //$('.modal-msg').attr('apply_name',apply_name);
                }
                if(result.errCode == -1){
                  //弹出模态框
                  $('.modal-msg').modal('show')
                  $('.modal-body').text(result.errMsg)
                }
              },
              error: function(e){
                console.log("error");
                //console.error(e.message)
                $('.modal-msg').modal('show')
                $('.modal-body').text('签到操作失败')
              },
          });
        });//on

        //点击模态框确认按钮
        $('#result-sure').on('click',function(){
          window.location.reload()
        })
      })

    </script>
