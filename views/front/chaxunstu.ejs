       $(function() {
        'use strict';

        //表单验证
          $('form').bootstrapValidator({
  　　　　　　　message: 'This value is not valid',
                excluded : [':disabled'],//[':disabled', ':hidden', ':not(:visible)']
                submitButtons: 'button[type="submit"]',
                submitHandler: null,
              　feedbackIcons: {
                  　　　　　　　　valid: 'glyphicon glyphicon-ok',
                  　　　　　　　　invalid: 'glyphicon glyphicon-remove',
                  　　　　　　　　validating: 'glyphicon glyphicon-refresh'
              　　　　　　　　   },
                fields: {//(?!.*select)^.*$
                    people_no: {
                        message: '校园卡号验证失败',
                        validators: {
                            notEmpty: {
                                message: '校园卡号不能为空!'
                            },
                            regexp: {
                               regexp: /^\d{6}$/,
                               message: '请输入6位校园卡号'
                           }
                                  //^\d{n}$
                        }
                    }
                }
          }).on('success.form.bv', function(e) {
            //return false
            console.log(e)
            e.preventDefault();
            let  people_no = $('#people_no').val()
            console.log('check args-->',people_no)
            //提交
            $.ajax({
              url: '/front/chaxunstu', 
              async: true,
              dataType: 'json',
              type: 'POST',
              data: {
                people_no:people_no
              },

              success: function(result){
                console.log('手工签到 success')
                console.log(result)
                if(result.errCode == 0){
                  //弹出模态框
                  // $('.modal-msg').modal('show')
                  // $('.modal-body').text('查询成功，跳转！')
                  window.location.href = '/front/chaxunstutable?xiaoyuankahao=' + result.errMsg[0].xiaoyuankahao 
                  //$('.modal-msg').attr('randomStr',result.result.randomStr);
                  //$('.modal-msg').attr('apply_name',apply_name);
                }
                if(result.errCode == -1){
                  //弹出模态框
                  $('.modal-msg').modal('show')
                  $('.modal-body').text(result.errMsg)
                }
              },
              error: function(e){
                console.log("error");
                //console.error(e.message)
                $('.modal-msg').modal('show')
                $('.modal-body').text('签到操作失败')
              },
          });
        });//on

        //点击模态框确认按钮
        $('#result-sure').on('click',function(){
          window.location.reload()
        })
      })

